{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "esModuleInterop":true,
    "baseUrl": ".",  // 解析非相对模块的基地址，默认是当前目录
    "paths": {
      "@/*": ["./src/*" ]  //把@映射为src目录
    }
  },
  "include": [
    "./src/**/*"
  ]
}